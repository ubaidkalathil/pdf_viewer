<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="14dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_cover"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:elevation="0dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="14dp"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/frame"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="130dp"

                    />

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="18dp"
                android:text="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingEnd="24dp"
                android:paddingStart="110dp"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:id="@+id/iv_done"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/done"
                android:layout_margin="14dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="130dp"

                />
            <ImageView
                android:id="@+id/iv_download"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/download"
                android:layout_margin="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="130dp"

                />

            <ProgressBar
                android:id="@+id/down_progress"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/download"
                android:layout_margin="6dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="130dp"
                />
            <TextView
                android:id="@+id/tv_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ljhsajkshdkjjkhalkjhgkjdshgkjsdhasjdghkjsdhjk"
                android:layout_margin="14dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="12dp"
                android:paddingStart="110dp"
                android:paddingEnd="80dp"
                app:layout_constraintStart_toEndOf="@+id/cv_cover"
                app:layout_constraintBottom_toBottomOf="parent"

                />
            <TextView
                android:id="@+id/tv_isbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ISBN:24546"
                android:layout_margin="14dp"
                android:maxLines="1"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>